<h1>Statistic</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Modifiedat</th>
            <td>{{ entity.modifiedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        
        <tr>
            <th>Entries</th>
            {% for entry in entity.entries %}
            <td>{{ "Type: " ~ entry.targetType ~ ", Id: " ~ entry.targetId }}</td>
            {% endfor %}
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('stats_crud_stat') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('stats_crud_stat_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('stats_crud_stat_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
