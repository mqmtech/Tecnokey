{% extends 'TecnokeyShopBundle:Backend:layout.html.twig' %}

{% block header %}
{# blank header #}
{% endblock header%}

{% block treeContainer %}{% endblock treeContainer%}

{% block content %}

<!--login form-->

<div class="logo_admin">
    <img src="{{ asset('bundles/tecnokey/images/logo.png') }}" width="188" height="38" alt="logo" />
</div>

<!--form container-->
<div class=" login_admin_container">


    <div class="titulo_admin">Administración Tecnokey</div>

    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <!--forms login y pass-->
    <form action="{{ path("TKShopSecurityLoginCheck") }}" method="post" id="login">
        <div class="form_admin_container">

            <span class="text_bold">Nombre de usuario:</span>
            <input id="username" name="_username" type="text" class="login_admin_form" value="{{ last_username }}"/>

            <span class="text_bold">Contraseña:</span>
            <input id="password" name="_password" type="password" class="password_admin_form"/>

            <!--div class="acceder_admin_btn"><a href="#">Acceder</a></div -->
            
            {#
                If you want to control the URL the user is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <input type="submit" name= "login" class="acceder_admin_btn" value="Acceder"/>

        </div>

        <!--bottom-->
        <div class="bottom_admin_container">
            <span class="text_bold"><a href="#">Volver al sitio...</a></span>
        </div>
    </form>



</div><!--end form container-->

<!--sombrar-->
<div class="sombra_form_admin"></div>


<!--login form-->
{% endblock %}