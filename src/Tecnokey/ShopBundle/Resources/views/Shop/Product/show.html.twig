<h1>Shop\Product</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Description</th>                <td>{{ entity.description }}</td>        </tr>
        <tr>
            <th>Createdat</th>                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Modifiedat</th>                <td>{{ entity.modifiedAt|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Isfeatured</th>                <td>{{ entity.isFeatured }}</td>        </tr>
        <tr>
            <th>Isenabled</th>                <td>{{ entity.isEnabled }}</td>        </tr>
        <tr>
            <th>Stock</th>                <td>{{ entity.stock }}</td>        </tr>
        <tr>
            <th>Weight</th>                <td>{{ entity.weight }}</td>        </tr>
        <tr>
            <th>Sku</th>                <td>{{ entity.sku }}</td>        </tr>
        <tr>
            <th>BasePrice</th>                <td>{{ entity.baseprice }}</td>        </tr>
        <tr>
            <th>Offer start</th>                <td>{{ entity.offer.start | date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Offer deadline</th>                <td>{{ entity.offer.deadline | date('Y-m-d H:i:s') }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('crud_product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('crud_product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('crud_product_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
