{% extends 'TecnokeyShopBundle:Frontend:layout.html.twig' %}

{% block title %}| Tecnokey | Pedidos en proceso |{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/tecnokey/css/user.css') }}" rel="stylesheet" type="text/css" />
{% endblock stylesheets %}

{% block menu %}
        {% include 'TecnokeyShopBundle:Frontend:menu.partialhtml.twig' with {'menu' : 'productos'} %}
{% endblock %}

{% block contextualThree %}<a href="{{ path('TKShopFrontendIndex') }}">Inicio</a> \ <a href="{{ path('TKShopFrontendUserShow', {'_format': 'html'}) }}">Mi cuenta</a> \ Pedidos en proceso \
{% endblock %}

{% block left %}
    {% render path('TKShopFrontendCategoriesShowAllFamilies', {'_format': 'partialhtml'}) | toAppPath %}
{% endblock %}

{% block right %}
<!--start right-->
    <div class="right">
    	<!--start menu user-->
        {% include 'TecnokeyShopBundle:Frontend/User:menu.partialhtml.twig' with {'nothing' : 'null'} %}            
        <!--end menu user--> 
        
        <!--start cuerpo--> 
        <div class="right_cuerpo_user">
<div class="titulo_current">Seguimiento de pedidos: 
        	  <span class="text_bold">Consulte el estado de todos sus pedidos realizados.</span>
</div>
               <div class="lista_pedidos_container">
                    {% include 'TecnokeyShopBundle:Frontend/User/Order:showAll.partialhtml.twig' with {'entities' : entities} %}            
               </div>
                
                <p class="text_bold">Los posibles estados son los siguientes:</p>
				<p class="text_general">Recibido: Pedido recibido pero no se ha procesado.</p>
          <p class="text_general">En proceso:  Pedido preparado para el envió.</p>
          <p class="text_general">Enviado: Pedido Entregado al servicio de mensajería, según la modalidad de envío.</p>
          
        </div>
        <!--end cuerpo--> 
    </div><!--end right-->
{% endblock right %}