{# src/Acme/BlogBundle/Resources/views/Frontend/Default/index.html.twig #}
{% extends 'TecnokeyShopBundle:Frontend:layout.html.twig' %}

{% block title %} | Tecnokey | Inicio | {% endblock %}

{% block menu %}<!--start header-->
        {% include 'TecnokeyShopBundle:Frontend:menu.partialhtml.twig' with {'menu' : 'inicio'}%}
{% endblock %}

{% block content %}

<div class="banner">
        <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" width="988" height="300" id="FlashID" title="banner">
            <param name="movie" value="images/anim_portada.swf" />
            <param name="quality" value="high" />
            <param name="wmode" value="opaque" />
            <param name="swfversion" value="6.0.65.0" />
            <!-- This param tag prompts users with Flash Player 6.0 r65 and higher to download the latest version of Flash Player. Delete it if you donâ€™t want users to see the prompt. -->
            <param name="expressinstall" value="Scripts/expressInstall.swf" />
            <!-- Next object tag is for non-IE browsers. So hide it from IE using IECC. -->
            <!--[if !IE]>-->
            <object type="application/x-shockwave-flash" data="{{ asset('bundles/tecnokey/images/anim_portada.swf') }}" width="988" height="300">
                <!--<![endif]-->
                <param name="quality" value="high" />
                <param name="wmode" value="opaque" />
                <param name="swfversion" value="6.0.65.0" />
                <param name="expressinstall" value="Scripts/expressInstall.swf" />
                <!-- The browser displays the following alternative content for users with Flash Player 6.0 and older. -->
                <div>
                    <h4>Content on this page requires a newer version of Adobe Flash Player.</h4>
                    <p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" width="112" height="33" /></a></p>
                </div>
                <!--[if !IE]>-->
            </object>
            <!--<![endif]-->
        </object>
    </div>

    <div class="sombrabanner"></div>

<div class="bodyprod">
    {% set count = 0 %}
    {% for entity in entities %}
    {% if(count == 3) %} <div class="prodcol2">
    {% else %}
    <div class="prodcol1">
    {% set count = count +1 %}
    {% endif %}         
        <div class="prod">
            <div class="tituloprodbox">
                <h2><a href="{{ path('TKShopFrontendCategoriesShowAllCategories',{'id' : entity.id}) }}">{{ entity.name| upper }}</a></h2></div>
            {% if (entity.image!= null) %} 
            {#<div class="foto_prodbox"><img class="foto_prodbox" src="{{ path('TKShopFrontendImageShowData', {'imageId': entity.image.id}) }}" /></div>#}
                <div class="foto_prodbox"><a href="{{ path('TKShopFrontendCategoriesShowAllCategories',{'id' : entity.id}) }}"><img class="foto_prodbox" src="{{ asset(entity.image.getWebPath) }}" /></a></div>
            {% else %} 
            <div class="foto_prodbox"><a href="{{ path('TKShopFrontendCategoriesShowAllCategories',{'id' : entity.id}) }}"><img class="foto_prodbox" src="{{ asset('bundles/tecnokey/images/cajas_fuertes.png') }}" /></a></div>
            {% endif %}
        </div>
        <div class="sombraprod"></div>


        <div class="textbox">
            <h4>{{ entity.description | truncate() }}</h4>
        </div>            

        <div class="masinfo"><a href="{{ path('TKShopFrontendCategoriesShowAllCategories',{'id' : entity.id}) }}"><img src="{{ asset('bundles/tecnokey/images/masinfo.png') }}" alt="masinfo" /></a></div>
    </div>
        {% endfor %}


</div>

{% endblock %}