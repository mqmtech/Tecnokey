<h1>Shop\Category</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Nombre</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Descripción</th>                <td>{{ entity.description }}</td>        </tr>
        <tr>
            <th>Categoría Padre</th>                <td>{{ entity.parentCategory |default("No tiene categoría padre") }}</td>        </tr>
        <tr>
            <th>Fecha creación</th>                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Fecha modificación</th>                <td>{{ entity.modifiedAt|date('Y-m-d H:i:s') }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('TKShopBackendCategoriesIndex') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('TKShopBackendCategoryEdit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('TKShopBackendCategoryDelete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
